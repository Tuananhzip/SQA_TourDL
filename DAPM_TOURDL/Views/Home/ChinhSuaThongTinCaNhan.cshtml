@model DAPM_TOURDL.Models.KHACHHANG

@{
    ViewBag.Title = "Chỉnh Sửa Thông Tin Cá Nhân";
    Layout = "~/Views/Shared/ClientLayout.cshtml";
}
<link rel="stylesheet" href="~/CSS/Client/ChinhSuaThongTinCaNhan.css" />
<div class="head">
    <div class="content-main">Chi tiết tour</div>
    <video autoplay loop muted plays-inline class="hero-image"><source src="~/Images/Client/Video/ocean.mp4" /></video>
</div>
@using (Html.BeginForm())
{
    <div class="btn-back-profile m-4">
        @Html.ActionLink("Quay lại", "ThongTinCaNhan", new { id = Model.ID_KH })
    </div>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_KH)
    <div class="d-flex justify-content-center">
        <div class="container" style="margin:20px">
            <div class="col-sm-12 col-xs-12 edit_information">
                <form asp-action="ChinhSuaThongTinCaNhan" method="post">
                    <h3 class="text-center">Chỉnh sửa thông tin cá nhân</h3>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.HoTen_KH, new { @class = "profile_details_text" })
                                @Html.EditorFor(model => model.HoTen_KH, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.HoTen_KH, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.GioiTinh_KH, new { @class = "profile_details_text" })
                                @Html.DropDownListFor(model => model.GioiTinh_KH,
                                    new SelectList(new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "Choose" , Value = ""},
                                        new SelectListItem { Text = "Nam", Value = "Nam" },
                                        new SelectListItem { Text = "Nữ", Value = "Nữ" },
                                        // Các lựa chọn khác nếu cần
                                    }, "Value", "Text",Model.GioiTinh_KH),
                                    new { @class = "form-control", autocomplete = "off", @required = "required" }
                                )
                                @Html.ValidationMessageFor(model => model.GioiTinh_KH, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.SDT_KH, new { @class = "profile_details_text" })
                                @Html.EditorFor(model => model.SDT_KH, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.SDT_KH, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.NgaySinh_KH, new { @class = "profile_details_text" })
                                @Html.EditorFor(model => model.NgaySinh_KH, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.NgaySinh_KH, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Mail_KH, new { @class = "profile_details_text" })<span> (Không được thay đổi)</span>
                                @Html.EditorFor(model => model.Mail_KH, new { htmlAttributes = new { @class = "form-control", @required = "required", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Mail_KH, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CCCD, new { @class = "profile_details_text" })
                                @Html.EditorFor(model => model.CCCD, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.CCCD, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MatKhau, new { @class = "profile_details_text" })
                        <span>xác nhận thay đổi thông tin cá nhân</span>
                        @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", @required = "required",@value = "" })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 submit">
                            <div class="form-group" style="text-align:center">
                                <input type="submit" class="btn btn-success" value="Save">
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @if (ViewBag.Notification != null)
                                    {
                                        <div class="alert alert-danger" role="alert">@ViewBag.Notification</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
