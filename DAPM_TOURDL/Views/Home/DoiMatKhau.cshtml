@model DAPM_TOURDL.Models.KHACHHANG

@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/ClientLayout.cshtml";
}
<style>
    body {
        overflow: hidden;
    }
</style>
<div class="head">
    <div class="content-main">Thông tin cá nhân</div>
    <video autoplay loop muted plays-inline class="hero-image"><source src="~/Images/Client/Video/ocean.mp4" /></video>
</div>
<div class="container">
    @using (Html.BeginForm("DoiMatKhau", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group my-3">
            <label for="currentPassword">Mật khẩu hiện tại:</label>
            <input type="password" id="currentPassword" name="currentPassword" class="form-control" value="@TempData["currentPassword"]" required />
        </div>

        <div class="form-group mb-3">
            <label for="newPassword">Mật khẩu mới:</label>
            <input type="password" id="newPassword" name="newPassword" class="form-control" value="@TempData["newPassword"]" required />
        </div>

        <div class="form-group mb-3">
            <label for="confirmPassword">Xác nhận mật khẩu mới:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" value="@TempData["confirmPassword"]" required />
        </div>
        <div class="text-danger">
            @Html.ValidationSummary()
        </div>
        <button type="submit" class="btn btn-primary mb-3">Đổi mật khẩu</button>
    }
</div>
